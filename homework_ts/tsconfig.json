{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "Node",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "app",
    "strict": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "./app/**/*"
  ],
  "exclude": [
    "./app/**/*.spec.ts"
  ]
}